<launch>
  <arg name="scan_file_name" default="default_scan" />
  <arg name="ply_name" default="default.ply" />

  <node name="hotspray_application" pkg="hotspray_application" type="hotspray_application_node" output="screen">
    <param name="scan_action" value="create_scan_poses"/>
    <param name="scan_file_name" value="${scan_file_name}"/>

    <param name="yak_scan_frame" value="tsdf_origin"/>
    <param name="ply_name" value="${ply_name}"/>

  </node>
</launch>
