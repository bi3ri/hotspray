<?xml version="1.0"?>
<launch>
  <arg name="robot_name" default="ur5" />
  <arg name="paused" default="true"/>
  <arg name="gazebo_gui" default="false"/>
  <arg name="sim" default="true"/>


  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find hotspray_description)/worlds/emtyp_world.world"/> 
    <!--arg name="world_name" value="$(find hotspray_description)/worlds/ur5_robot.world"/-->
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>


  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model ur5
    -J elbow_joint 1.50
    -J shoulder_lift_joint -1.50
    -J shoulder_pan_joint 2.25
    -J wrist_1_joint 0
    -J wrist_2_joint 1.50
    -J wrist_3_joint -0.85"
    respawn="false" output="screen" />


  <!-- <node if="$(arg sim)" name="spawn_test_model" pkg="gazebo_ros" type="spawn_model" args="-file $(find hotspray_description)/urdf/test_cylinder.urdf -urdf -model test_cylinder 
    -x 0.5
    -y 0.5 
    -z 1.0"
    respawn="false" output="screen" /> -->

    <node if="$(arg sim)" name="spawn_test_model" pkg="gazebo_ros" type="spawn_model" args="-file $(find hotspray_description)/urdf/coil.urdf -urdf -model coil 
    -x 0.65
    -y 0.65
    -z 0.7"
    respawn="false" output="screen" />


  <!-- Controllers 
  <group ns="$(arg robot_name)">
    <rosparam command="load" file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" />
    <node name="controller_spawner" pkg="controller_manager" type="spawner"
          args="manipulator_joint_trajectory_controller manipulator_joint_state_controller" />
  </group>
  

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  -->
  
  <include file="$(find ur_gazebo)/launch/controller_utils.launch"/>

  <!-- start this controller -->
  <rosparam file="$(find ur_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

  <!-- load other controllers -->
  <node name="ros_control_controller_manager" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="load joint_group_position_controller" />

</launch>
